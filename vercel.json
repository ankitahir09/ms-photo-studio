{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/auth/login", "dest": "/api/auth/login" },
    { "src": "/api/health", "dest": "/api/health" },
    { "src": "/api/delete-image", "dest": "/api/delete-image" },
    { "src": "/api/update-order", "dest": "/api/update-order" },
    { "src": "/api/upload/upload", "dest": "/api/upload/upload" },
    { "src": "/api/data/(.*)", "dest": "/api/data/$1" },
    { "src": "/api/images/(.*)", "dest": "/api/images/$1" },
    { "src": "/api/data", "dest": "/api/data" },
    { "src": "/api/images", "dest": "/api/images" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)\\.(js|css|png|jpg|svg|ico|txt|json|woff2|ttf)", "dest": "/$1.$2" },
    { "src": "/((?!api).*)", "dest": "/index.html" }
  ]
}
