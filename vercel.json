{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node", "config": { "includeFiles": ["backend/**"] } },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/server.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}
